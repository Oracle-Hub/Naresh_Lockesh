SET LINES 200
SET PAGES 40
COL STATUS FORMAT a9
COL HOURS FORMAT 999.99
COL IN_RATE FORMAT a10
COL OUT_RATE           FORMAT a10
COL IN_BYTES           FORMAT a10
COL OUT_BYTES          FORMAT a10
COL TIME_TAKEN_DISPLAY FORMAT a10
COL DEV_TYPE           FORMAT a8
COL COMP               FORMAT 99.99
COL AC                 FORMAT 99
COL AC_YN              FORMAT a5
SELECT SESSION_KEY, INPUT_TYPE,STATUS,OUTPUT_DEVICE_TYPE dev_type,AUTOBACKUP_COUNT ac,       
AUTOBACKUP_DONE  ac_yn,TO_CHAR(START_TIME,'YYYY-MM-DD HH24:MI:SS') start_time,TO_CHAR(END_TIME,'YYYY-MM-DD HH24:MI:SS')   end_time,       
ELAPSED_SECONDS/3600 hours,OPTIMIZED,COMPRESSION_RATIO comp,INPUT_BYTES_DISPLAY in_bytes,INPUT_BYTES_PER_SEC_DISPLAY in_rate,       
OUTPUT_BYTES_DISPLAY out_bytes,OUTPUT_BYTES_PER_SEC_DISPLAY out_rate,TIME_TAKEN_DISPLAY 
FROM   
V$RMAN_BACKUP_JOB_DETAILS where INPUT_TYPE like 'DB INC%'
--V$RMAN_BACKUP_JOB_DETAILS where INPUT_TYPE like 'ARCHIVELOG%'
ORDER BY SESSION_KEY;
